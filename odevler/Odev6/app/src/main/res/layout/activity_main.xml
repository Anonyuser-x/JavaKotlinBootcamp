<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <!-- Header: Ortalanmış Disney+ Logo -->
    <ImageView
        android:id="@+id/disneyLogo"
        android:layout_width="223dp"
        android:layout_height="107dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/disney_logo_desc"
        android:src="@drawable/disney_main_logo" />

    <!-- Kampanya Slider -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/kampanyaSlider"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="16dp" />

    <!-- Kategori RecyclerView (Yatay Liste) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/kategoriRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:overScrollMode="never" />

    <!-- Film RecyclerView (Dikey Liste) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filmRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

</LinearLayout>
