<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/button28"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/uyku"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button27"
        app:layout_constraintTop_toBottomOf="@+id/button25" />

    <ImageButton
        android:id="@+id/button27"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/yay"
        app:layout_constraintEnd_toStartOf="@+id/button28"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button26"
        app:layout_constraintTop_toBottomOf="@+id/button24" />

    <ImageButton
        android:id="@+id/button26"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/voleybo"
        app:layout_constraintEnd_toStartOf="@+id/button27"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button23" />

    <ImageButton
        android:id="@+id/button25"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/dovus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button24"
        app:layout_constraintTop_toBottomOf="@+id/button22" />

    <ImageButton
        android:id="@+id/button24"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/gaming"
        app:layout_constraintEnd_toStartOf="@+id/button25"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button23"
        app:layout_constraintTop_toBottomOf="@+id/button21" />

    <ImageButton
        android:id="@+id/button23"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/deve"
        app:layout_constraintEnd_toStartOf="@+id/button24"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <ImageButton
        android:id="@+id/button22"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/topcu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button21"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/button21"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/music"
        app:layout_constraintEnd_toStartOf="@+id/button22"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/get_started"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/agbalumo"
            android:text="Daily Habits"
            android:textColor="@color/second_font_colot_white"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="17dp" />
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="let's Choose"
        android:textColor="@color/first_font_color_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Some Habit"
        android:textColor="@color/get_started"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Choose your daily habits, you can choose more than one "
        android:textAlignment="center"
        android:textColor="@color/first_font_color_black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_launcher"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/button21"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button29"
        android:layout_width="196dp"
        android:layout_height="61dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/get_started"
        android:text="Get Started"
        android:textColor="@color/second_font_colot_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button27" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="238dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/sarmasik" />

</androidx.constraintlayout.widget.ConstraintLayout>
